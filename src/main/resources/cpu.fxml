<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<ScrollPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cpuController">
   <content>
      <AnchorPane prefHeight="1000.0" prefWidth="1600.0">
          <children>
              <VBox prefHeight="1000.0" prefWidth="1600.0">
                  <children>
                      <AreaChart fx:id="cpuChart" title="CPU METRICS" VBox.vgrow="ALWAYS">
                          <xAxis>
                              <NumberAxis label="TIME" side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                              <NumberAxis side="LEFT" />
                          </yAxis>
                      </AreaChart>
                      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
                          <children>
                              <ChoiceBox fx:id="cpu_selector_1" prefHeight="25.0" prefWidth="300.0" />
                        <ChoiceBox fx:id="cpu_selector_2" layoutX="256.0" layoutY="35.0" prefHeight="25.0" prefWidth="300.0" />
                              <Button mnemonicParsing="false" onAction="#getCpuMetrics" text="SUBMIT" />
                        <Button layoutX="981.0" layoutY="35.0" mnemonicParsing="false" onAction="#clearChart" text="CLEAR" />
                          </children>
                      </HBox>
                  </children>
              </VBox>
          </children>
      </AnchorPane>
   </content>
</ScrollPane>
