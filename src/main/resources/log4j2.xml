<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="Logfile" fileName="MetricsCollectorLog.txt" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="Main" level="trace" additivity="false">
            <AppenderRef ref="Logfile"/>
        </Logger>
        <Logger name="UI" level="trace" additivity="false">
            <AppenderRef ref="Logfile"/>
        </Logger>
        <Logger name="MetricCollector" level="trace" additivity="false">
            <AppenderRef ref="Logfile"/>
        </Logger>
        <Logger name="TableCreationChecks" level="trace" additivity="false">
            <AppenderRef ref="Logfile"/>
        </Logger>
        <Logger name="Database" level="trace" additivity="false">
            <AppenderRef ref="Logfile"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>