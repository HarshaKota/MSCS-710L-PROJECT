<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="powerController">
   <children>
      <VBox prefHeight="800.0" prefWidth="1200.0">
         <children>
            <AreaChart fx:id="powerChart" legendSide="RIGHT" prefHeight="750.0" prefWidth="1200.0" title="POWER METRICS">
              <xAxis>
                <CategoryAxis label="TIME" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis label="BATTERY PERCENTAGE" side="LEFT" />
              </yAxis>
            </AreaChart>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <ChoiceBox fx:id="power_selector" prefWidth="150.0" />
                  <Button mnemonicParsing="false" onAction="#getPowerMetrics" text="SUBMIT" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
